{
  "name": "Time Tracker",
  "version": "1.0",
  "description": "Track how much time you spend on each website.",
  "permissions": ["declarativeContent", "tabs", "storage"],
  "background": {
    "scripts": ["timer.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Time Tracker",
    "default_icon": {
      "48": "time-48.png"
    }
  },
  "icons": {
    "48": "time-48.png"
  },
  "manifest_version": 2
}
